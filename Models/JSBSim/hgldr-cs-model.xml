<?xml version="1.0"?>

<PropertyList>

 <nasal>
  <load>
   var livery_update = aircraft.livery_update.new("Aircraft/airwaveXtreme150/Models/JSBSim/Variants");
  </load>
  <unload>
   livery_update.stop();
  </unload>
 </nasal>

 <path>hgldr_cs.ac</path>

 <offsets>
  <x-m>-1.5</x-m>
  <z-m>1.1</z-m>
  <pitch-deg>15</pitch-deg>
 </offsets>

<!-- __________________ Glider __________________ -->

 <animation>
  <type>rotate</type>
   <object-name>Glider</object-name>  
    <expression>
     <product>
      <property>surface-positions/left-aileron-pos-norm</property>
      <property>gear/gear[2]/wow</property>
      <value>-15</value>
      <value>1</value>
     </product>
    </expression>
    <center>
      <x-m>1.536</x-m>
      <y-m>0.0</y-m>
      <z-m>0.0</z-m>
    </center>
    <axis>
      <x>0.9659258</x>
      <y>0.0</y>
      <z>0.2588190</z>
    </axis>
  </animation>

 <animation>
  <type>rotate</type>
   <object-name>Glider</object-name>
    <expression>
     <table>
      <product>
       <property>surface-positions/elevator-pos-norm</property>
       <property>gear/gear[2]/wow</property>
       <value>-1</value>      
      </product>
      <entry><ind>-1.0</ind> <dep>-40</dep></entry>
      <entry><ind>0</ind>    <dep>0</dep></entry>
      <entry><ind>1.0</ind>  <dep>10</dep></entry>	       
     </table>
    </expression>

    <center>
      <x-m>1.536</x-m>
      <y-m>0.0</y-m>
      <z-m>0.0</z-m>
    </center>
    <axis>
      <x>0.0</x>
      <y>1.0</y>
      <z>0.0</z>
    </axis>
 </animation> 

 <animation>
  <type>rotate</type>
   <object-name>Glider</object-name>
    <expression>
     <product>
      <property>surface-positions/rudder-pos-norm</property>
      <property>gear/gear[2]/wow</property>
      <value>-25</value>
      <value>1</value>
     </product>
    </expression>
    <center>
      <x-m>1.536</x-m>
      <y-m>0.0</y-m>
      <z-m>0.0</z-m>
    </center>
    <axis>
      <x>-0.2588190</x>
      <y>0.0</y>
      <z>0.9659258</z>
    </axis>
 </animation>


